<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="primaryColor">@color/colorPrimary</item>
        <item name="primaryDarkColor">@color/colorPrimaryDark</item>
        <item name="bcColor">@color/colorBackground</item>
        <item name="whiteColor">@color/colorWhite</item>
        <item name="grayColor">@color/colorGray</item>
        <item name="blackColor">@color/colorBlack</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SmallLoginTextViews" parent="TextPoppinsMedium">
        <item name="android:textSize">@dimen/small_font</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextPoppinsMedium">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="SocialNetworkIconLogin">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FontBold">
        <item name="fontWeight">20</item>
    </style>

    <style name="ImageViewRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>


</resources>