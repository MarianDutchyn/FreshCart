<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="primary_color">@color/color_primary</item>
        <item name="primary_dark_color">@color/color_primary_dark</item>
        <item name="background_color">@color/color_background</item>
        <item name="white_color">@color/color_white</item>
        <item name="gray_color">@color/color_gray</item>
        <item name="android:statusBarColor">@color/color_primary_dark</item>
    </style>

    <style name="SmallLoginTextViews" parent="TextPoppinsMedium">
        <item name="android:textSize">@dimen/small_font</item>
        <item name="android:textColor">@color/color_gray</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextPoppinsMedium">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="SocialNetworkIconLogin">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FontBold">
        <item name="fontWeight">20</item>
    </style>


</resources>